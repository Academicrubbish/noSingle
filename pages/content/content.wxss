.inputbox{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  background-color: #eee;
  z-index: 2;
}
.inputbox .input{
  position: absolute;
  width: 310px;
  height: 30px;
  left: 5px;
  top: 5px;
  background-color: #ddd;
  border-radius: 5px;
}
.inputbox button{
  position: absolute;
  width: 58px;
  height: 30px;
  right: 10px;
  top: 5px;
  line-height: 30px;
  font-size: 15px;
  background-color: rgb(0, 223, 0);
  color: white;
}

.childbox{ 
  background-color: white;
  width: 100%;
  height: auto;
  overflow: auto;
  padding-bottom: 10px;
}
.uuuu{
  width: 100%;
  height: 50px;
  display: inline-block;
}
.childbox .userImage{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.childbox .userName{
  margin-left: 10px;
  width: 250px;
  height: 20px;
  float: left;
}
.childbox .userTime{
  margin-left: 50px;
  width: 180px;
  height: 20px;
  font-size: 12px;
  color:gray;
}
.childbox .content{
  display: inline-block;
  width: 350px;
  min-height: 0;
  margin-left: 50%;
  transform: translateX(-50%);
  word-wrap: break-word;
}